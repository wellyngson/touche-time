<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/colorRippleEffect"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <selector android:layout_width="match_parent">
            <item android:state_enabled="true">
                <shape>
                    <solid android:color="?attr/colorBackgroundComponents" />
                    <corners android:radius="@dimen/spacing_small" />
                </shape>
            </item>
            <item android:state_enabled="false">
                <shape>
                    <solid android:color="?attr/colorBackgroundComponentsDisable" />
                    <corners android:radius="@dimen/spacing_small" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="?attr/colorBackgroundComponents" />
                    <corners android:radius="@dimen/spacing_small" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>