<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:colorEdgeEffect">@color/colorAccent</item>

        <item name="background">@color/color_default_background</item>
        <item name="android:colorBackground">@color/color_default_background</item>
        <item name="android:windowBackground">@color/color_default_background</item>

        <item name="colorBackgroundDefault">@color/color_default_background</item>
        <item name="colorBackgroundComponents">@color/black_secondary</item>
        <item name="colorBackgroundComponentsGray">@color/gray_primary</item>
        <item name="colorBackgroundCategory">@color/gray_background_category</item>
        <item name="colorTextPrimary">@color/white</item>
        <item name="colorDescriptionChooseFight">@color/gray_secondary</item>
        <item name="colorDialogBackground">@color/gray_quaternary</item>
        <item name="colorBottomSheetThumbIndicator">@color/smoke</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="TextViewBasic">
        <item name="android:textColor">?colorTextPrimary</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextViewTitle" parent="TextViewBasic">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">@dimen/spacing_x_large</item>
    </style>

    <style name="TextViewTitleChooseFight" parent="TextViewBasic">
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="TextViewDescriptionChooseFight">
        <item name="android:textColor">?colorDescriptionChooseFight</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextViewWeight" parent="TextViewBasic">
        <item name="android:textSize">@dimen/font_title_big</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="TextViewCategory" parent="TextViewBasic">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">@dimen/font_title_large</item>
    </style>

    <style name="TextViewIndividualScoreName" parent="TextViewBasic">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">@dimen/font_title_normal</item>
    </style>

    <style name="TextViewIndividualScoreFoul" parent="TextViewIndividualScoreName">
        <item name="android:textSize">@dimen/font_foul_size</item>
    </style>

    <style name="TextViewIndividualScore" parent="TextViewBasic">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">@dimen/font_score_size</item>
    </style>

    <style name="TextChronometer" parent="TextViewBasic">
        <item name="android:fontFamily">@font/ds_digi_b</item>
        <item name="android:textSize">@dimen/font_chronometer_size</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/spacing_middle</item>
        <item name="background">@drawable/background_item_chronometer</item>
    </style>

    <style name="TextViewRoundChronometer" parent="TextViewBasic">
        <item name="android:textSize">@dimen/font_title_normal</item>
        <item name="fontFamily">@font/inter_thin</item>
    </style>

    <style name="TextViewTitleFragmentCategory" parent="TextViewBasic">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">@dimen/font_title_large</item>
    </style>

    <style name="TransparentBottomSheetDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TransparentBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetDialogStyle</item>
    </style>

</resources>