<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewBasic">
        <item name="android:textColor">@color/text_individual_score</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextViewTitleHome" parent="TextViewBasic">
        <item name="fontFamily">@font/inter_bold</item>
        <item name="android:textSize">@dimen/spacing_x_large</item>
    </style>

    <style name="TextViewTitleChooseFight" parent="TextViewBasic">
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="TextViewDescriptionChooseFight">
        <item name="android:textColor">@color/text_color_description_choose_fight</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextViewWeight" parent="TextViewBasic">
        <item name="android:textSize">@dimen/font_title_big</item>
        <item name="fontFamily">@font/inter_bold</item>
    </style>

    <style name="TextViewCategory" parent="TextViewBasic">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">@dimen/font_title_large</item>
    </style>

    <style name="TextViewIndividualScoreName" parent="TextViewBasic">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">@dimen/font_title_normal</item>
    </style>

    <style name="TextViewIndividualScoreFoul" parent="TextViewIndividualScoreName">
        <item name="android:textSize">@dimen/font_foul_size</item>
    </style>

    <style name="TextViewIndividualScore" parent="TextViewBasic">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">@dimen/font_score_size</item>
    </style>

    <style name="TextChronometer" parent="TextViewBasic">
        <item name="android:fontFamily">@font/ds_digi_b</item>
        <item name="android:textSize">@dimen/font_chronometer_size</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/spacing_middle</item>
        <item name="background">@drawable/background_item_chronometer</item>
    </style>

    <style name="TextViewTitleFragmentCategory" parent="TextViewBasic">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">@dimen/font_title_large</item>
    </style>
</resources>