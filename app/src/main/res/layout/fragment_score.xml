<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:background="@color/black_background"
    android:paddingHorizontal="@dimen/spacing_normal">

    <br.wrestling.ui.common.IndividualScore
        android:id="@+id/red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundComponent="@drawable/background_score_red"
        app:backgroundComponentsAddRemove="@drawable/background_components_red"
        app:name="Wellyngson Elias"
        app:foul="0"/>

    <br.wrestling.ui.common.IndividualScore
        android:id="@+id/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_normal"
        app:layout_constraintTop_toBottomOf="@id/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundComponent="@drawable/background_score_blue"
        app:backgroundComponentsAddRemove="@drawable/background_components_blue"
        app:name="Wellyngson Elias"
        app:foul="0"/>

    <FrameLayout
        android:id="@+id/chronometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_middle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blue"/>

</androidx.constraintlayout.widget.ConstraintLayout>